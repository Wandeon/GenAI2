# ============================================================================
# GenAI2 - Environment Variables
# ============================================================================
# Copy this file to .env and fill in the values

# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/genai2"

# Redis (for BullMQ)
REDIS_URL="redis://localhost:6379"

# API
PORT=4000
HOST=0.0.0.0
CORS_ORIGIN="http://localhost:3000"
COOKIE_SECRET="change-this-in-production"

# LLM - Ollama Cloud (primary) + DeepSeek (fallback)
OLLAMA_BASE_URL="https://ollama.com/v1"
OLLAMA_API_KEY=""
LLM_MODEL_FAST="gemini-3-flash-preview"
LLM_MODEL_QUALITY="gemini-3-pro-preview"
DEEPSEEK_API_KEY=""
LLM_MODEL_BACKUP="deepseek-v3.2"

# Node environment
NODE_ENV="development"
